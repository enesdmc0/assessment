// Prisma schema for NoCode AI Platform
// Database models and relationships

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(cuid())
    email     String   @unique
    name      String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    projects Project[]
    sessions Session[]
}

model Project {
    id          String   @id @default(cuid())
    name        String
    description String?
    userId      String
    status      String   @default("active")
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    user        User         @relation(fields: [userId], references: [id])
    components  Component[]
    generations Generation[]

    @@index([userId])
}

model Component {
    id            String   @id @default(cuid())
    projectId     String
    name          String
    componentData String
    order         Int
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt

    project Project @relation(fields: [projectId], references: [id])

    @@index([projectId])
}

model Generation {
    id          String    @id @default(cuid())
    projectId   String
    prompt      String
    status      String    @default("pending")
    result      String?
    tokensUsed  Int?
    createdAt   DateTime  @default(now())
    completedAt DateTime?

    project Project @relation(fields: [projectId], references: [id])
}

model Session {
    id        String   @id @default(cuid())
    userId    String
    token     String   @unique
    expiresAt DateTime
    createdAt DateTime @default(now())

    user User @relation(fields: [userId], references: [id])
}

model QueueJob {
    id           String    @id @default(cuid())
    type         String
    payload      Json
    status       String    @default("pending")
    priority     Int       @default(0)
    attempts     Int       @default(0)
    maxAttempts  Int       @default(3)
    error        String?
    createdAt    DateTime  @default(now())
    scheduledFor DateTime  @default(now())
    startedAt    DateTime?
    completedAt  DateTime?
}

model ActivityLog {
    id        String   @id @default(cuid())
    userId    String
    action    String
    metadata  String
    createdAt DateTime @default(now())

    @@index([userId])
}
